{
  "manifest_version": 3,
  "name": "Curtin Calendar",
  "version": "0.1.0",
  "description": "Convert your curtin timetable into an ics file with a click of a buttonðŸš€. Avoid the hassle of writing it yourself",
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "action": {
    "default_title": "Curtin Calendar",
    "default_popup": "popup.html"
  },
  "permissions": ["downloads"],

  "content_scripts": [
    {
      "matches": [
        "https://curtin-web.t1cloud.com/T1SMDefault/WebApps/eStudent/SM/*"
      ],
      "run_at": "document_idle",
      "js": ["contentScript.js"]
    }
  ]
}
